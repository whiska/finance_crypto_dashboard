<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainl_layout"
    android:layout_width="210dp"
    android:layout_height="140dp"
    android:padding="16dp"
    android:background="@drawable/light_purple_bg">


    <ImageView
        android:id="@+id/stock_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/stock_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stock_name_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/stock_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/stock_img"
        app:layout_constraintTop_toTopOf="@+id/stock_img"
        tools:text="title" />

    <TextView
        android:id="@+id/stock_price_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stock_img"
        app:layout_constraintBottom_toTopOf="@+id/stock_change_percent_lbl"
        tools:text="$0" />

    <TextView
        android:id="@+id/stock_change_percent_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#12c737"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stock_price_lbl"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="+10%" />

    <com.majorik.sparklinelibrary.SparkLineLayout
        android:id="@+id/line_chart"
        android:layout_width="70dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@+id/stock_price_lbl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stock_img"
        app:s_line_color="#fed32c"
        app:s_line_thickness="2dp"
        app:s_marker_background_color="#fed32c"
        app:s_marker_width="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>